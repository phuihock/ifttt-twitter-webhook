# Webhook Server Configuration
# Secret for optional signature verification (leave blank to disable)
WEBHOOK_SECRET=your_secret_key_here

# Flask server port and debug flag
PORT=5000
DEBUG=False

# Docker Compose Environment Variables
# Set these to match your system's user ID and group ID for proper file permissions
# Get your user ID and group ID with these commands:
#   id -u
#   id -g
USER_ID=1000
GROUP_ID=1000

# Flask environment
FLASK_ENV=production

# Suppress ChromaDB telemetry warnings
ANONYMIZED_TELEMETRY=False
CHROMA_TELEMETRY=False

# CPU compatibility flags for older CPUs without AVX
# These help avoid Illegal instruction errors with some BLAS libraries
OPENBLAS_CORETYPE=Haswell
MKL_THREADING_LAYER=SEQUENTIAL
OMP_NUM_THREADS=1